bind-key    CM-3           group-only-3
bind-key    CM-l           "/home/romanzolotarev/bin/lockscreen"
bind-key    CM-q           window-delete
bind-key    CM-r           restart
bind-key    CSM-q          quit
bind-key    F5             "/home/romanzolotarev/bin/screencast start"
bind-key    F6             "/home/romanzolotarev/bin/screencast stop"
bind-key    M-Return       xterm
bind-key    M-e            menu-exec
bind-key    M-equal        "/home/romanzolotarev/bin/vol up"
bind-key    M-h            window-htile
bind-key    M-j            window-cycle-ingroup
bind-key    M-k            window-rcycle-ingroup
bind-key    M-l            "cmus-remote --shuffle"
bind-key    M-m            "/home/romanzolotarev/bin/vol toggle"
bind-key    M-minus        "/home/romanzolotarev/bin/vol down"
bind-key    M-n            "cmus-remote --next"
bind-key    M-p            "cmus-remote --prev"
bind-key    M-r            "cmus-remote -C 'toggle repeat_current'"
bind-key    M-s            "/home/romanzolotarev/bin/screenshot"
bind-key    M-t            window-maximize
bind-key    M-u            "cmus-remote --pause"
bind-key    M-v            window-vtile
bind-key    SM-1           window-movetogroup-1
bind-key    SM-2           window-movetogroup-2
bind-key    SM-3           window-movetogroup-3

command     firefox        firefox
command     chrome         chrome
command     xterm          xterm

borderwidth 16
color       activeborder   gray8
